<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UserRegister">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/phone" />
    </LinearLayout>

    <TextView
        android:id="@+id/showusernames"
        android:layout_width="match_parent"
        android:layout_height="91dp"
        android:layout_marginLeft="135dp"
        android:layout_marginRight="135dp"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:text="username"
        android:textSize="28sp" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/setnewuser"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="registeruser"
            android:text="注册信息" />

        <TextView
            android:id="@+id/shownewuser"
            android:layout_width="282dp"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:text="显示注册信息：" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="134dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/viewnewuser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:onClick="getotheruser"
            android:text="获取可供发送的用户" />

        <Spinner
            android:id="@+id/showother"
            android:layout_width="235dp"
            android:layout_height="57dp"
            android:layout_gravity="center"
            android:layout_weight="1" />

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_res"
            android:layout_gravity="center"
            android:onClick="selectuser"
            android:text="选中" />
    </LinearLayout>

    <View
        android:id="@+id/view5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/getprivatekey"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="getprivatekey"
            android:text="获得私钥" />

        <EditText
            android:id="@+id/showprivatekey"
            android:layout_width="156dp"
            android:layout_height="62dp"
            android:layout_weight="1"
            android:hint="私钥为："
            android:letterSpacing="0.15"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="179dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/checkips"
            android:layout_width="114dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:onClick="ShowConnection"
            android:text="查看在线节点"
            android:textSize="15sp" />

        <Spinner
            android:id="@+id/showconnect"
            android:layout_width="219dp"
            android:layout_height="53dp"
            android:layout_gravity="center"
            android:layout_weight="1" />

        <Button
            android:id="@+id/button4"
            android:layout_width="77dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/button_res"
            android:onClick="Selected"
            android:text="选中" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/uploadown"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="70dp"
            android:layout_weight="1"
            android:text="上传下载" />

        <Button
            android:id="@+id/personal"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_weight="1"
            android:text="个人中心" />
    </LinearLayout>

</LinearLayout>